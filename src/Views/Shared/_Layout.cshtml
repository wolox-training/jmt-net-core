<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrainingNetChangedTitle</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Movie" asp-action="ListMovies" class="navbar-brand">Movies</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if(User.Identity.IsAuthenticated)
                    {
                        <li><a asp-area="" asp-controller="Movie" asp-action="Add">add</a></li>
                        <li><a asp-area="" asp-controller="Movie" asp-action="ListMovies">movie list</a></li>
                        <li><a asp-area="" asp-controller="Account" asp-action="Logout">log out</a></li>
                        <li><a asp-area="" asp-controller="UserManagement" asp-action="Users">list users</a></li>
                    }
                    else
                    {
                        <li><a asp-area="" asp-controller="Account" asp-action="Login">log in</a></li>
                        <li><a asp-area="" asp-controller="Account" asp-action="Register">register</a></li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right color-white">	
                    <li>	
                        @User.Identity.Name	
                    </li>	
                </ul>
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - TrainingNet</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
