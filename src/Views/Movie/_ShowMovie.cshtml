@using TrainingNet.Models.Views
@model MovieViewModel
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            Title: @Html.EditorFor(m => m.Title)
        </div>
        <div class="form-group">
            Release date: @Html.EditorFor(m => m.ReleaseDate)
        </div>
        <div class="form-group">
            Genre: @Html.EditorFor(m => m.Genre)
        </div>
        <div class="form-group">
            Price: @Html.EditorFor(m => m.Price)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a asp-area="" asp-action="DeleteMovie" asp-route-id="@Model.ID" class="btn btn-default">
                Delete
            </a>
        </div>
    </div>
}
